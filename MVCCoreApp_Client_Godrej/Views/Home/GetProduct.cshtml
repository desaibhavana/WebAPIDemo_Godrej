@model Product
@{
    ViewData["Title"] = "GetProduct";
}

<h2>Get Product by Id <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<h3 class="text text-danger">@ViewBag.StatusCode</h3>
<form method="post">
    <div class="form-group">
        <label for="id">ProductId:</label>
        <input class="form-control"  asp-for="@Model.ProductId" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-success">Get Product</button>
    </div>
</form>
@if (Model != null)
{
    <h2>Product</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ProductId</th>
                <th>ProductName</th>
                <th>Price</th>
                <th>Qty</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ProductId</td>
                <td>@Model.ProductName</td>
                <td>@Model.Price</td>
                <td>@Model.Qty</td>
            </tr>
        </tbody>
    </table>
}





