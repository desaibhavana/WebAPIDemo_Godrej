@model Product 

@{
    ViewData["Title"] = "AddProduct";
}

<h2>
    Add a Product <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a>
    </h2>
<form asp-action="AddProduct" method="post">

    <div class="form-group">
        <label for="ProductId">ProductId:</label>
        <input class="form-control" asp-for="@Model.ProductId" />
    </div>

    <div class="form-group">
        <label for="ProductName">ProductName:</label>
        <input class="form-control" asp-for="@Model.ProductName" />
    </div>

    <div class="form-group">
        <label for="Price">Price:</label>
        <input class="form-control" asp-for="@Model.Price" />
    </div>

    <div class="form-group">
        <label for="Qty">Qty:</label>
        <input class="form-control" asp-for="@Model.Qty" />
    </div>

    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-success">Add</button>
    </div>
</form>


@if (Model != null)
{
    <h2>Product</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ProductId</th>
                <th>ProductName</th>
                <th>Price</th>
                <th>Qty</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ProductId</td>
                <td>@Model.ProductName</td>
                <td>@Model.Price</td>
                <td>@Model.Qty</td>
            </tr>
        </tbody>
    </table>
}

