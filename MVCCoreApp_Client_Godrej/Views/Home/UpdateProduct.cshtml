@model Product

@{
    ViewData["Title"] = "UpdateProduct";
}

<h2>Update a PRoduct <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="ProductId"></label>
        <input class="form-control" asp-for="ProductId" readonly />
    </div>
    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input class="form-control" asp-for="ProductName" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" />
    </div>
    <div class="form-group">
        <label asp-for="Qty"></label>
        <input class="form-control" asp-for="Qty" />
    </div>


    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-success">Update</button>
    </div>
</form>

@if (ViewBag.Result == "Success")
{
    <h2>Product</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ProductId</th>
                <th>ProductName</th>
                <th>Price</th>
                <th>Qty</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ProductId</td>
                <td>@Model.ProductName</td>
                <td>@Model.Price</td>
                <td>@Model.Qty</td>
            </tr>
        </tbody>
    </table>
}

